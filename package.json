{
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "gatsby build",
    "check:links": "remark -f src/projects/",
    "clean": "gatsby clean",
    "format": "npm run format:code && npm run format:pkg",
    "format:code": "prettier --write . --ignore-path .gitignore",
    "format:pkg": "format-package -w",
    "lint": "npm run lint:ts && npm run lint:md && npm run lint:spelling",
    "lint:md": "write-good $(glob 'src/projects/**/*.md') --no-tooWordy",
    "lint:spelling": "cspell '**' --no-progress",
    "lint:ts": "eslint . --ext .ts,.tsx --ignore-path .gitignore",
    "serve": "gatsby serve",
    "start": "gatsby develop -H 0.0.0.0",
    "test": "npm run lint",
    "typecheck": "tsc --noEmit"
  },
  "browserslist": [
    "defaults and supports es6-module"
  ],
  "cspell": {
    "dictionaries": [
      "companies",
      "css",
      "custom-words",
      "en_US",
      "filetypes",
      "fonts",
      "html",
      "latex",
      "node",
      "npm",
      "softwareTerms"
    ],
    "dictionaryDefinitions": [
      {
        "name": "custom-words",
        "path": "./src/custom-words.txt",
        "addWords": true
      }
    ],
    "ignorePaths": [
      "package-lock.json"
    ],
    "language": "en",
    "useGitignore": true,
    "version": "0.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "react",
      "jsx-a11y"
    ]
  },
  "prettier": {
    "proseWrap": "always",
    "trailingComma": "all"
  },
  "remarkConfig": {
    "plugins": [
      "remark-lint-no-dead-urls"
    ]
  },
  "dependencies": {
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "gatsby": "^5.8.1",
    "gatsby-plugin-canonical-urls": "^5.8.0",
    "gatsby-plugin-catch-links": "^5.8.0",
    "gatsby-plugin-image": "^3.8.0",
    "gatsby-plugin-netlify": "^5.1.0",
    "gatsby-plugin-sharp": "^5.8.1",
    "gatsby-plugin-sitemap": "^6.8.0",
    "gatsby-plugin-split-css": "^2.0.3",
    "gatsby-remark-copy-linked-files": "^6.8.0",
    "gatsby-remark-images": "^7.8.0",
    "gatsby-remark-katex": "^7.8.0",
    "gatsby-remark-prismjs": "^7.8.0",
    "gatsby-source-filesystem": "^5.8.0",
    "gatsby-transformer-remark": "^6.8.0",
    "gatsby-transformer-sharp": "^5.8.0",
    "gatsby-transformer-yaml": "^5.8.0",
    "katex": "^0.16.4",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "cli-glob": "^0.1.0",
    "cspell": "^6.31.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "format-package": "^7.0.0",
    "prettier": "^2.8.7",
    "puppeteer": "^19.8.5",
    "remark-cli": "^11.0.0",
    "remark-lint-no-dead-urls": "^1.1.0",
    "write-good": "^1.0.8"
  }
}
